<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nút được nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Màu nền khi nhấn sẽ tối hơn một chút -->
            <solid android:color="#00c5a7" />
            <!-- Bo góc 8dp -->
            <corners android:radius="8dp" />
            <!-- Viền của nút -->
            <stroke
                android:width="1dp"
                android:color="#00c5a7" />
        </shape>
    </item>

    <!-- Trạng thái mặc định của nút -->
    <item>
        <shape android:shape="rectangle">
            <!-- Màu nền cam của nút -->
            <solid android:color="#00c5a7" />
            <!-- Bo góc 8dp -->
            <corners android:radius="8dp" />
            <!-- Viền của nút -->
            <stroke
                android:width="1dp"
                android:color="#00c5a7" />
            <!-- Padding bên trong nút -->
            <padding
                android:bottom="8dp"
                android:left="16dp"
                android:right="16dp"
                android:top="8dp" />
        </shape>
    </item>
</selector>